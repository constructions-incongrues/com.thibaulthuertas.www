{% extends 'ConstructionsIncongruesComThibaultHuertasWwwBundle::Default/layout.html.twig' %}

{% block title %}
{{ project.title }} | 
{% endblock %}

{% block content %}
<div class="details_content" id="project">

  <ul class="details_content_nav">
    {% if projectPrevious %}
    <li>
      <a href="{{ path('project_show', {slug: projectPrevious.slug}) }}#project" title="Voir le projet {{ projectPrevious.title }}">
        <img src="{{ asset('bundles/constructionsincongruescomthibaulthuertaswww/img/icon/arrow-left.png') }}" />
      </a>
    </li>  
    {% endif %}
    <li>
      <a href="{{ path('homepage') }}#projects" title="Retourner Ã  la liste des projets">
        <img src="{{ asset('bundles/constructionsincongruescomthibaulthuertaswww/img/icon/retour-mosaique.png') }}" />
      </a>
    </li>
    {% if projectNext %}
    <li>
      <a href="{{ path('project_show', {slug: projectNext.slug}) }}#project" title="Voir le projet {{ projectNext.title }}">
        <img src="{{ asset('bundles/constructionsincongruescomthibaulthuertaswww/img/icon/arrow-right.png') }}" />
      </a>
    </li>
    {% endif %}
  </ul>

  <h1>{{ project.title }}</h1>
  <p class="details_content_p_big">
    {{ project.description|converturls }}
  </p>

  <hr />
  <p class="details_content_p_slim">
    {{ project.credits|nl2br|converturls }}
  </p>  

  <hr class="details_content_padding_first_pics" /> 

  {% for image in project.getImages() %}
  <img src="{{ asset('bundles/constructionsincongruescomthibaulthuertaswww/assets/projects/' ~ project.slug ~ '/' ~ image.getFilename()) }}" class="details_content_img_border" />
  {% endfor %}

</div><!-- /.details_content -->

{% endblock %}